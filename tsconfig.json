{
  "include": ["src/**/*"],
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "module": "esnext",
    "sourceMap": true,
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "./dist",
    "target": "es5",
    "baseUrl": ".",
    "paths": {}
  }
}
